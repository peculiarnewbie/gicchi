---
import Layout from "../layouts/Layout.astro";
import { XMLParser } from "fast-xml-parser";
import "../styles/global.css";

export const prerender = false;

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
const videosRes = await fetch(
    "https://www.youtube.com/feeds/videos.xml?channel_id=UCqCKVXkLaF23tFowULXuLdQ",
    {
        headers: {
            Accept: "application/json",
        },
    }
);
const videosXml = await videosRes.text();
const parser = new XMLParser();
const videos = parser.parse(videosXml);
const newestVideoId = videos.feed.entry[0]["yt:videoId"];
---

<Layout>
    <main class="min-h-screen bg-gradient-to-b from-amber-50 to-orange-50">
        <div class="container">
            <div class="flex justify-center">
                <div>
                    {/* Hero Section */}
                    <section class="w-full py-16 md:py-20 lg:py-28">
                        <div class="container mx-auto px-4 md:px-6">
                            <div
                                class="grid gap-8 lg:grid-cols-2 lg:gap-12 items-center"
                            >
                                <div class="space-y-6 relative">
                                    <div
                                        class="flex flex-col items-center lg:items-start space-y-4"
                                    >
                                        <h1
                                            class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl py-2 lg:py-0 bg-clip-text text-transparent bg-gradient-to-r to-amber-300 from-orange-500"
                                        >
                                            Singer & Voice Actor
                                        </h1>
                                        <p
                                            class="text-xl text-amber-900/70 max-w-[600px] text-center lg:text-left"
                                        >
                                            Bringing characters to life and
                                            melodies to heart üéôÔ∏è
                                        </p>
                                        <div
                                            class="flex flex-col items-center text-amber-900/70"
                                        >
                                            <div
                                                class="rounded-xl overflow-hidden sm:h-[270px] sm:w-[480px] h-[180px] w-[320px]"
                                            >
                                                <iframe
                                                    id="newest-video"
                                                    height="100%"
                                                    width="100%"
                                                    src=`https://www.youtube.com/embed/${newestVideoId}`
                                                    title="YouTube video player"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope;"
                                                    allowfullscreen
                                                >
                                                </iframe>
                                            </div>
                                            my most recent cover
                                        </div>
                                    </div>
                                </div>
                                <div
                                    class="mx-auto lg:ml-auto relative order-first lg:order-none"
                                >
                                    <div
                                        class="absolute inset-0 bg-gradient-to-r from-amber-300 to-orange-600 rounded-full blur-3xl opacity-20 animate-pulse"
                                    >
                                    </div>
                                    <div
                                        class="relative w-[320px] h-[400px] sm:w-[400px] sm:h-[500px] overflow-hidden rounded-3xl transform rotate-2 shadow-2xl border-4 border-white"
                                    >
                                        <img
                                            src="/gicchi_hero.webp"
                                            alt="Gicchi"
                                            class="object-cover"
                                        />
                                    </div>
                                    <div
                                        class="absolute -bottom-6 -right-6 bg-white p-4 rounded-full shadow-lg transform -rotate-6"
                                    >
                                        <!-- <Music class="h-8 w-8 text-purple-500" /> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    {/* Services Section */}
                    <section id="services" class="w-full py-8 md:py-12">
                        <div class="container mx-auto px-4 md:px-6">
                            <div
                                class="flex flex-col items-center justify-center space-y-4 text-center mb-12"
                            >
                                <h2
                                    class="relative text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-r to-amber-300 from-orange-500"
                                >
                                    Where to find me
                                    <img
                                        src="/gicchi_smile.webp"
                                        alt="Gicchi"
                                        class="absolute -top-0 lg:-left-32 -left-20 lg:h-24 lg:w-24 h-16 w-16 z-10 -rotate-12 drop-shadow-xl"
                                    />
                                </h2>
                                <p
                                    class="max-w-[700px] text-amber-900/70 text-xl"
                                >
                                    Discover more of my work
                                </p>
                            </div>
                            <div
                                class="mx-auto grid max-w-5xl gap-8 py-8 sm:grid-cols-2 lg:grid-cols-3"
                            >
                                {
                                    [
                                        {
                                            // icon: <Mic class="h-10 w-10" />,
                                            title: "Youtube",
                                            description:
                                                "cover songs and some voice acting",
                                            color: "from-purple-500 to-purple-300",
                                            link: "https://www.youtube.com/@gicchi",
                                            logo: "/svgs/youtube.svg",
                                        },
                                        {
                                            // icon: <Music class="h-10 w-10" />,
                                            title: "Instagram",
                                            description:
                                                "mostly fangirling, occassionally yapping",
                                            color: "from-pink-500 to-pink-300",
                                            link: "https://www.instagram.com/gicchi46/",
                                            logo: "/svgs/instagram.svg",
                                        },
                                        {
                                            // icon: <Radio class="h-10 w-10" />,
                                            title: "Trakteer",
                                            description: "",
                                            color: "from-purple-500 to-pink-300",
                                            link: "https://trakteer.id/gicchi",
                                            logo: "/svgs/trakteer.svg",
                                        },
                                    ].map((service, i) => (
                                        <a
                                            class="flex flex-col items-center justify-center gap-4 rounded-lg p-4 hover:bg-gray-50 hover:shadow shadow-sm border border-amber-300 bg-white transition-all"
                                            href={service.link}
                                            target="_blank"
                                        >
                                            <div class="flex gap-4 items-center ">
                                                <img
                                                    src={service.logo}
                                                    alt={service.title}
                                                    class="h-8 w-8"
                                                />
                                                <h3 class="text-lg font-bold text-amber-800">
                                                    {service.title}
                                                </h3>
                                            </div>
                                            {service.description && (
                                                <p class="text-center text-sm text-amber-900/70">
                                                    {service.description}
                                                </p>
                                            )}
                                        </a>
                                    ))
                                }
                            </div>
                        </div>
                    </section>

                    {/* Portfolio Section */}
                    <section
                        id="portfolio"
                        class="w-full py-16 md:py-12 lg:py-16 mb-16"
                    >
                        <div class="container mx-auto px-4 md:px-6">
                            <div
                                class="flex flex-col items-center justify-center space-y-4 text-center mb-4"
                            >
                                <h2
                                    class="relative text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-r to-amber-300 from-orange-500"
                                >
                                    Work with me

                                    <img
                                        src="/gicchi.webp"
                                        alt="Gicchi"
                                        class="absolute -top-4 lg:-top-8 lg:-right-36 -right-20 h-16 w-16 lg:h-24 lg:w-24 z-10 rotate-12 drop-shadow-xl"
                                    />
                                </h2>
                                <p
                                    class="max-w-[700px] text-amber-900/70 text-xl"
                                >
                                    Indonesian, Japanese, or English voice over
                                    and covers
                                </p>
                            </div>
                            <div class="w-full flex justify-center gap-8 py-8">
                                <a
                                    class="flex items-center gap-4 p-4 rounded-lg border border-amber-300 bg-white hover:bg-gray-50 shadow-sm max-w-md cursor-pointer transition-all duration-200 hover:shadow-md hover:border-[#1dbf73] group relative"
                                    role="button"
                                    aria-label="Visit my Fiverr profile"
                                    href="https://www.fiverr.com/brigittaputeri"
                                    target="_blank"
                                >
                                    <div
                                        class="relative h-16 w-16 rounded-full overflow-hidden flex-shrink-0 border border-amber-300 group-hover:border-[#1dbf73] transition-colors"
                                    >
                                        <img
                                            src="/git.webp"
                                            alt="Profile"
                                            class="object-cover"
                                        />
                                    </div>

                                    <div class="flex-1">
                                        <h3
                                            class="font-medium text-base group-hover:text-[#1dbf73] transition-colors text-amber-800"
                                        >
                                            Need help with your project?
                                        </h3>
                                        <p
                                            class="text-sm text-neutral-600 mt-1"
                                        >
                                            Check out my services on Fiverr
                                        </p>
                                    </div>

                                    <img
                                        src="/svgs/arrow.svg"
                                        class="h-5 w-5 text-[#1dbf73] opacity-0 group-hover:opacity-100 transition-opacity"
                                    />

                                    <div
                                        class="absolute bottom-0 left-0 w-full h-1 bg-[#1dbf73] transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"
                                    >
                                    </div>
                                </a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
</Layout>
